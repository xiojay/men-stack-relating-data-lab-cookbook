<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    
  <h1>Welcome to My Pantry</h1>
  <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
  <% if (pantry.length > 0) { %>
    <ul>
      <% pantry.forEach(food => { %>
        <li>
          <%= food.name %>
          <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
          <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No items in your pantry.</p>
  <% } %>
    
  </body>
</html>
